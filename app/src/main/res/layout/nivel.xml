<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="13dp"
    android:layout_marginBottom="@dimen/fab_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="10dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_gravity="center"
            android:background="@drawable/bgn_button_gradient2">

            <ImageView
                android:id="@+id/iv_imagenNivel"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="19dp"
                android:src="@drawable/basico"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nivel 1 BÃ¡sico"
                android:textSize="@dimen/text_intro"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/progreso_nivel"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/btn_progress"
                        android:src="@drawable/bgn_button_gradient2"/>
                    <ImageView
                        android:id="@+id/progreso_nivel2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="@dimen/btn_progress"
                        android:src="@drawable/bgn_button_gradient2"/>
                    <ImageView
                        android:id="@+id/progreso_nivel3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_height="@dimen/btn_progress"
                        android:src="@drawable/bgn_progreso"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>