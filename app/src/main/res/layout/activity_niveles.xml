<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgnmenu"
    android:layout_height="match_parent"
    tools:context=".NivelesActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margintop_intro"
        android:layout_weight=".16">
        <TableRow>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null" />
            <TextView
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/margintop_intro"
                android:textSize="@dimen/text_mensaje"
                android:textStyle="normal"
                android:layout_gravity="center|start"
                android:fontFamily="sans-serif"
                android:text="@string/bienvenido"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margintop_intro"
        android:layout_weight=".16">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/round_button2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_basico"
                android:text="BÃ¡sico"
                android:backgroundTint="@null"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/round_button2"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btn_intermedio"
                android:backgroundTint="@null"
                android:text="Intermedio"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/round_button2"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:id="@+id/btn_avanzado"
                android:backgroundTint="@null"
                android:text="Avanzado"
                android:layout_gravity="center"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/fab_margin"
        android:background="@drawable/bgn_scroll_view1"
        android:orientation="vertical">
        <GridView
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/gv_niveles"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="1">
        </GridView>
    </LinearLayout>


</LinearLayout>