<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="3pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <ImageView
                    android:id="@+id/tema_img"
                    android:layout_width="@dimen/width_temas"
                    android:layout_height="@dimen/height_temas"
                    android:layout_gravity="center"
                    android:background="@drawable/bgn_button_gradient"
                    android:src="@drawable/negocios" />

                <TextView
                    android:id="@+id/tv_tema_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingTop="8dp"
                    android:text="@string/negocios"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_temas"/>


        </LinearLayout>


</LinearLayout>